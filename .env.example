# .env.example
# Copy this file to .env.local and fill in your actual values

# Clerk Authentication Keys
# Get these from https://clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# CLOUDFLARE R2 CREDENTIALS (AWS S3 SDK Compatible)
# Get these from Cloudflare R2 dashboard
BUCKET_NAME=your-bucket-name
REGION=auto
ACCESS_KEY_ID=your_r2_access_key_id
SECRET_ACCESS_KEY=your_r2_secret_access_key
PUBLIC_DEVELOPMENT_URL=https://your-bucket-url.r2.dev
CF_API_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com/your-bucket-name

# NEONDB (PostgreSQL Database)
# Get this from https://neon.tech/
DATABASE_URL=postgresql://username:password@host/database?sslmode=require&channel_binding=require

# GOOGLE AI (GEMINI)
# Get API key from https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_AI_MODEL=gemini-pro

# GITHUB PERSONAL ACCESS TOKEN
# Create at https://github.com/settings/tokens
# Needed for issue reporting feature
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_token_here

# ADMIN PANEL SECURITY
# Add your IP addresses (comma-separated)
# Find your IP at https://whatismyipaddress.com/
ADMIN_ALLOWED_IPS=127.0.0.1,::1,localhost,your.public.ip.address

# Admin Login Credentials
# Set your own secure admin credentials
ADMIN_USER_ID=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password